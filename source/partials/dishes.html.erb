<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div class="sub-title">
        <h2> Baked Gifts</h2>
      </div>
      <div class="gift-div">
        <div class="cards justify-content-center">
          <% data.dishes.each do |dish| %>
            <div class="card">
              <div class="card-product">
                <%= image_tag dish.image, alt: "dish image" %>
              </div>
              <div class="card-info w-100">
                <div class="d-flex justify-content-between align-items-center">
                  <h2><%= dish.name %></h2>
                  <h2 id="price"><%= dish.price %></h2>
                </div>
                <p><%= dish.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
